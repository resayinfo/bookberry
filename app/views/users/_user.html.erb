<table class="table">
<td>
  <h5><%= link_to user.email, user %></h5>
</td>
<td>
  <%= form_for(user) do |f| %>
    <%= f.select(:role, User.roles.keys.map {|role| [role,role]}, {  }, { :class => "form-control"}) %>
    <td>
     <button type="submit" class="btn btn-success">Change Role</button>
    </td>
  <% end %>
</td>
<td>
  <%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger') unless user == current_user %>
</td>
</table>